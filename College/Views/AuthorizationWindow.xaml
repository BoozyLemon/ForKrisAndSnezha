<Window x:Class="College.Views.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:College.Views"
        mc:Ignorable="d"
        FontFamily="Times New Roman"
        Background="#ffe4e1"
        Title="Авторизация"
        MinHeight="450" MinWidth="800">
    <StackPanel MinWidth="250" HorizontalAlignment="Center"
                VerticalAlignment="Center">
        <Image Source="\Resources\college_logo.png"
               MaxHeight="150"/>
        <TextBlock>Логин</TextBlock>
        <TextBox Name="TextBoxLogin"/>
        <TextBlock>Пароль</TextBlock>
        <PasswordBox Name="PasswordBoxPas"/>
        <TextBox Name="TextBoxPassword" Visibility="Collapsed"/>
        <CheckBox Name="CheckBoxShowPassword" Content="Показать пароль" Margin="0,5" Checked="CheckBoxShowPassword_Checked" Unchecked="CheckBoxShowPassword_Unchecked"/>
        <Button
            Name="ButtonEnter"
            Margin="0,5"
            Background="#ff4a6d"
            Content="Войти" Click="ButtonEnter_Click"
            />
    </StackPanel>
</Window>
